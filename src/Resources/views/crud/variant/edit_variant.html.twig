{# templates/admin/business_stats/index.html.twig #}
{% extends '@EasyShop/crud/variant/new_variant.html.twig' %}

{% block page_title product.name ~ ' - ' ~ 'sylius.ui.edit_product_variant'|trans  %}

{% block content_title %}
    {%- apply spaceless -%}
        {{ product.name }}
        <small class="d-block">{{ 'sylius.ui.edit_product_variant'|trans }}</small>
    {%- endapply -%}
{% endblock %}

{% block page_actions %}
    <button onclick="document.forms['{{ form.vars.full_name }}'].submit()" class="btn btn-primary">{{ 'sylius.ui.save'|trans }}</button>
{% endblock %}
