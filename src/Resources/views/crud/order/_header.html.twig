{% import "@EasyShop/SyliusUiBundle/Macro/flags.html.twig" as flags %}

<h1 class="mb-2">
    {{ 'sylius.ui.order'|trans }} #{{ order.number }}
</h1>
<div class="d-flex gap-4 mb-4">
    <div class="item px-4 py-2 border-bottom">
        {{ order.checkoutCompletedAt|format_datetime }}
    </div>
    <div class="item px-4 py-2 border-bottom" id="sylius-order-state">
        {% include [('@EasyShop/crud/Common/Label/State' ~ '/' ~ order.state ~ '.html.twig'), '@SyliusUi/Label/_default.html.twig'] with {'value': ('sylius.ui.' ~ order.state)|trans} %}
    </div>
    <div class="item px-4 py-2 border-bottom" id="sylius-order-currency">
        {{ order.currencyCode }}
    </div>
    <div class="item px-4 py-2 border-bottom">
        {{ flags.fromLocaleCode(order.localeCode) }} {{ order.localeCode|sylius_locale_name|capitalize }}
    </div>
    {% if channel is defined %}
        <div class="item px-4 py-2 border-bottom">
            {{ 'sylius.ui.purchased_from'|trans }} {{ channel.name|default(channel.code) }}
        </div>
    {% endif %}
</div>

