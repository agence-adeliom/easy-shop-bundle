<div class="card" id="customer">
    <div class="card-body">
{#        {{ path('sylius_admin_customer_show', {'id': customer.id}) }}#}
        {% set customerUrl = ea_url()
            .setController(ea.crud.controllerFqcn)
            .setAction('showCustomer')
            .setEntityId(order.id)
            .set("customerId", customer.id)
        %}
        <a href="{{ customerUrl }}" class="fs-4 sylius-customer-name">{{ customer.fullName }}</a>
        <div class="meta">
            <span class="date">{{ 'sylius.ui.customer_since'|trans }} {{ customer.createdAt|format_date }}.</span>
        </div>

        <div class="extra content mt-1">
            <a href="mailto:{{ customer.email }}">
                <i class="fa fa-envelope"></i>
                {{ customer.email }}
            </a>
        </div>
        {% if customer.phoneNumber is not empty %}
        <div class="extra content mt-1">
            <span>
                <i class="fa fa-phone"></i>
                {{ customer.phoneNumber }}
            </span>
        </div>
        {% endif %}
        {% if order.customerIp is defined and order.customerIp is not empty %}
        <div class="extra content" id="ipAddress">
            <span>
                <i class="fa fa-desktop"></i>
                {{ order.customerIp }}
            </span>
        </div>
        {% endif %}
    </div>
</div>
