{% extends '@EasyShop/front/layout.html.twig' %}

{% form_theme form '@EasyShop/front/Form/theme.html.twig' %}

{% block title %}{{ 'sylius.ui.register_in_the_store'|trans }} | {{ parent() }}{% endblock %}

{% block content %}
    {% include '@EasyShop/front/Register/_header.html.twig' %}

    {{ sylius_template_event('sylius.shop.register.after_content_header') }}

    <div class="row">
        <div class="col-12">
            {{ sylius_template_event('sylius.shop.register.before_form') }}

            {{ form_start(form, {'action': path('easy_shop_register'), 'attr': {'class': 'loadable form', 'novalidate': 'novalidate'}}) }}
                {% include '@EasyShop/front/Register/_form.html.twig' %}

                {{ sylius_template_event('sylius.shop.register.form', {'form': form}) }}

                <button type="submit" class="btn btn-primary" {{ sylius_test_html_attribute('register-button') }}>
                    {{ 'sylius.ui.create_an_account'|trans }}
                </button>
            {{ form_row(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}
