{% extends 'knp_menu.html.twig' %}

{% block root %}
    <div class="vertical menu">
        <ul class="list-group">
            <li class="list-group-item"><strong>{{ item.label|trans }}</strong></li>
            {{ block('list') }}
        </ul>
    </div>
{% endblock %}

{% block list %}
    {% for item in item.children %}
        {{ block('item') }}
    {% endfor %}
{% endblock %}

{% block item %}
    <a class="list-group-item list-group-item-action" href="{{ item.uri }}">
        {{ block('icon') }}
        {{ item.label|trans }}
    </a>
{% endblock %}

{% block icon %}
    {% set icon = item.labelAttribute('icon') %}
    {% if icon %}<i class="icon {{ icon }}"></i> {% endif %}
{% endblock %}
