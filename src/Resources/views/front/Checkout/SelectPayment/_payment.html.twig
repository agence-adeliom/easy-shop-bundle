<div class="d-block">
    <h4>{{ 'sylius.ui.payment'|trans }} #{{ loop.index }}</h4>
    <div class="payment-methods">
        {{ form_errors(form.method) }}

        {% for key, choice_form in form.method %}
            {% include '@EasyShop/front/Checkout/SelectPayment/_choice.html.twig' with {'form': choice_form, 'method': form.method.vars.choices[key].data} %}
        {% else %}
            {% include '@EasyShop/front/Checkout/SelectPayment/_unavailable.html.twig' %}
        {% endfor %}
    </div>
</div>
