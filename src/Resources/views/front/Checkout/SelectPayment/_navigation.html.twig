{% set enabled = order.payments|length %}

<div class="d-flex justify-content-between">
    {% if sylius_is_shipping_required(order) %}
        <a href="{{ path('easy_shop_checkout_select_shipping') }}" class="btn btn-link">{{ 'sylius.ui.change_shipping_method'|trans }}</a>
    {% else %}
        <a href="{{ path('easy_shop_checkout_address') }}" class="btn btn-link">{{ 'sylius.ui.change_address'|trans }}</a>
    {% endif %}
    <button type="submit" id="next-step" class="btn btn-primary{% if not enabled %} disabled{% endif %}" {{ sylius_test_html_attribute('next-step') }}>
        {{ 'sylius.ui.next'|trans }}
    </button>
</div>
